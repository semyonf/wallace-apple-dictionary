{
    "ts-node": {
      "transpileOnly": true
    },
    "compilerOptions": {
      "lib": [
        "esnext",
        "dom"
      ],
      "target": "es6",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
      "node_module"
    ]
  }